<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/cartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="장바구니가 비어 있습니다"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:id="@+id/java_search"
            android:visibility="gone">

            <ImageView
                android:id="@+id/java2"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:src="@drawable/book11" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가: 22,000원"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:id="@+id/ml_search"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ml2"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:src="@drawable/book21" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가: 34,000원"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:id="@+id/linux_search"
            android:visibility="gone">

            <ImageView
                android:id="@+id/linux2"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:src="@drawable/book31"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가: 30,000원"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:id="@+id/unity_search"
            android:visibility="gone">

            <ImageView
                android:id="@+id/unity2"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:src="@drawable/book41"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가: 28,000원"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/buttons"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 담은 책 구매하기"
            android:onClick="buy"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="주의!\n 이 페이지를 벗어나면 다시 장바구니에\n 책을 담아야 합니다."/>
    </LinearLayout>
</LinearLayout>

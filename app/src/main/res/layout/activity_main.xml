<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/coverImage"
        android:background="#4db5ce"
        android:foreground="@drawable/cover00"
        android:src="@drawable/cover01"/>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/bookListButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu01"/>
        <ImageButton
            android:id="@+id/loginButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu02"
            android:onClick="loginClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/csViewButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu03"/>
        <ImageButton
            android:id="@+id/mypageButton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu04"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bdbdbd"
        android:src="@drawable/logo"/>

</LinearLayout>
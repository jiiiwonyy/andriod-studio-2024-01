<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/books_cover"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="#dbdbdb">
            <ImageButton
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_type1"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_type22"
                android:layout_marginRight="16dp"
                android:onClick="onClick"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:id="@+id/java1"
                android:layout_marginVertical="4dp"
                android:onClick="cartInput">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/book11"/>
                <TableLayout>
                    <TextView
                        android:text="자바 코딩의 기술"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:text="현장에서 뽑은 70가지 예제로 배우는 코드 잘 짜는 법"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                    <TextView android:text="\u20A9 22,000" android:textSize="8dp"/>
                    <TextView android:text="264쪽" android:textSize="8dp"/>
                    <TextView android:text="사이먼 하러, 리누스 디에츠, 요르그 레너드, 심지현" android:textSize="8dp"/>
                    <TextView android:text="2020.07.30" android:textSize="8dp"/>
                </TableLayout>
            </TableRow>
            <TableRow
                android:id="@+id/ml1"
                android:layout_marginVertical="4dp"
                android:onClick="cartInput">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/book21"/>
                <TableLayout>
                    <TextView
                        android:text="머신 러닝을 다루는 기술"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:text="with 파이썬, 사이킷런"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                    <TextView android:text="\u20A9 34,000" android:textSize="8dp"/>
                    <TextView android:text="624쪽" android:textSize="8dp"/>
                    <TextView android:text="마크 페너,황준식" android:textSize="8dp"/>
                    <TextView android:text="2020.06.30" android:textSize="8dp"/>
                </TableLayout>
            </TableRow>
            <TableRow
                android:id="@+id/linux1"
                android:layout_marginVertical="4dp"
                android:onClick="cartInput">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/book31"/>
                <TableLayout>
                    <TextView
                        android:text="모던 리눅스 정리"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:text="그림으로 이해하고 만들면서 익히는"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                    <TextView android:text="\u20A9 30,000" android:textSize="8dp"/>
                    <TextView android:text="472쪽" android:textSize="8dp"/>
                    <TextView android:text="데이비드 클린턴(David Cliton), 강석주" android:textSize="8dp"/>
                    <TextView android:text="2019.10.10" android:textSize="8dp"/>
                </TableLayout>
            </TableRow>
            <TableRow
                android:id="@+id/unity1"
                android:layout_marginVertical="4dp"
                android:onClick="cartInput">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/book41"/>
                <TableLayout>
                    <TextView
                        android:text="유니티 교과서"
                        android:textStyle="bold"
                        android:textSize="13dp"/>
                    <TextView
                        android:text="이공계를 위한 프로그래망, 자료구조, 알고리즘"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                    <TextView android:text="\u20A9 28,000" android:textSize="8dp"/>
                    <TextView android:text="456쪽" android:textSize="8dp"/>
                    <TextView android:text="가타무라 마나미,김은철,유세라" android:textSize="8dp"/>
                    <TextView android:text="2019.10.30" android:textSize="8dp"/>
                </TableLayout>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/java2"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:src="@drawable/book11"
                        android:onClick="cartInput"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정가: 22,000원"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ml2"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:src="@drawable/book21"
                        android:onClick="cartInput"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정가: 34,000원"
                        android:gravity="center" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/linux2"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:src="@drawable/book31"
                        android:onClick="cartInput"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정가: 30,000원"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/unity2"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:src="@drawable/book41"
                        android:onClick="cartInput"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정가: 28,000원"
                        android:gravity="center" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </FrameLayout>
</LinearLayout>